<style>
/* Container for filters + toggle */
.filter-container {
  display: flex;
  align-items: center;
  overflow-x: auto;
  padding: 1rem 1.5rem;
  gap: 2rem;
  flex-wrap: nowrap;

}


.tax-toggle {
  border: 1px solid #ccc;
  border-radius: 2rem;
  padding: 0.5rem 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: max-content;
  white-space: nowrap;
}


/* Individual filter styling */
.filter {
  text-align: center;
  flex: 0 0 auto;
  opacity: 0.7;
  transition: 0.3s;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.filter p {
  font-size: 0.8rem;
  margin-top: 0.25rem;
}

/* Hide scroll bar */
.filter-container::-webkit-scrollbar {
  display: none;
}
.filter-container {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

/* Toggle on the right */
.tax-toggle {
  margin-left: auto;
  white-space: nowrap;
}

/* Responsive tweaks */
@media (max-width: 768px) {
  .filter-container {
    flex-wrap: nowrap;
    overflow-x: auto;
  }

  .tax-toggle {
    margin-left: auto;
  }
}

@media (min-width: 768px) and (max-width: 992px) {
  .filter-container {
    flex-wrap: wrap;
    justify-content: center;
  }

  .filter {
    width: 90px;
  }
}

.tax-info {
  display: none;
}


</style>

